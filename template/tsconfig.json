{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceRoot": "src",
    "importHelpers": true,
    "lib": [
      "es2017", "dom"
    ],
    "pretty": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "suppressExcessPropertyErrors": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "static"
  ]
}
